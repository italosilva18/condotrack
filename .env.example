# ========================================
# CONDOTRACK API - Environment Variables
# ========================================

# ----------------------------------------
# Server Configuration
# ----------------------------------------
SERVER_PORT=8000
APP_ENV=development

# ----------------------------------------
# JWT Authentication
# ----------------------------------------
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# ----------------------------------------
# Database Configuration (MySQL)
# ----------------------------------------
DB_HOST=localhost
DB_PORT=3306
DB_NAME=condotrack
DB_USER=condotrack_user
DB_PASS=Condo@2024Docker

# ----------------------------------------
# Asaas Payment Gateway
# ----------------------------------------
ASAAS_API_KEY=your_asaas_api_key_here
ASAAS_API_URL=https://sandbox.asaas.com/api/v3
ASAAS_WEBHOOK_TOKEN=your_webhook_token_here
ASAAS_ENV=sandbox

# ----------------------------------------
# Revenue Split Configuration (percentages)
# ----------------------------------------
REVENUE_INSTRUCTOR_PERCENT=70
REVENUE_PLATFORM_PERCENT=30

# ----------------------------------------
# Upload Configuration
# ----------------------------------------
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800

# ----------------------------------------
# MinIO Object Storage
# ----------------------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=condotrack
MINIO_SECRET_KEY=Condo@2024Minio
MINIO_USE_SSL=false
MINIO_PUBLIC_URL=http://localhost:9002
MINIO_BUCKET_UPLOADS=uploads
MINIO_BUCKET_PORTAL=portal-images
MINIO_BUCKET_EVIDENCE=evidence
MINIO_BUCKET_CERTIFICATES=certificates

# ----------------------------------------
# AI Integration (Gemini)
# ----------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# DOCKER ENVIRONMENT NOTES:
# ========================================
# When running in Docker Compose, use:
#   DB_HOST=mysql
#   MINIO_ENDPOINT=minio:9000
# ========================================
